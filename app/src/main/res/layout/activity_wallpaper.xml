<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="WallpaperActivity"
            type="tw.edu.ncku.im.yusin.arpractice.WallpaperActivity" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/AR3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WallpaperActivity">


        <TextView
            android:id="@+id/wallpaper_title"
            android:layout_width="415dp"
            android:layout_height="88dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="電影海報"
            android:textSize="50dp"
            app:layout_constraintEnd_toEndOf="@id/scroll"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-4dp" />

        <HorizontalScrollView
            android:id="@+id/scroll"
            android:layout_width="400dp"
            android:layout_height="567dp"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/wallpaper_title"
            tools:layout_editor_absoluteX="11dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageButton
                    android:id="@+id/dragoncat"
                    android:layout_width="338dp"
                    android:layout_height="541dp"
                    android:layout_marginStart="43dp"
                    android:layout_marginEnd="43dp"
                    android:gravity="center"
                    app:layout_constraintBottom_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/dragoncat" />

                <ImageButton
                    android:id="@+id/johnwick"
                    android:layout_width="338dp"
                    android:layout_height="541dp"
                    android:layout_marginStart="43dp"
                    android:layout_marginEnd="43dp"
                    android:gravity="center"
                    app:layout_constraintBottom_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/johnwick" />

                <ImageButton
                    android:id="@+id/johnwick3"
                    android:layout_width="338dp"
                    android:layout_height="541dp"
                    android:layout_marginStart="43dp"
                    android:layout_marginEnd="43dp"
                    android:gravity="center"
                    app:layout_constraintBottom_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/johnwick3" />

                <ImageButton
                    android:id="@+id/thief_family"
                    android:layout_width="338dp"
                    android:layout_height="541dp"
                    android:layout_marginStart="43dp"
                    android:layout_marginEnd="43dp"
                    android:gravity="center"
                    app:layout_constraintBottom_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/thief_family" />

                <ImageButton
                    android:id="@+id/titanic"
                    android:layout_width="338dp"
                    android:layout_height="541dp"
                    android:layout_marginStart="43dp"
                    android:layout_marginEnd="43dp"
                    android:gravity="center"
                    app:layout_constraintBottom_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/titanic" />

                <ImageButton
                    android:id="@+id/gamenight"
                    android:layout_width="338dp"
                    android:layout_height="541dp"
                    android:layout_marginStart="43dp"
                    android:layout_marginEnd="43dp"
                    android:gravity="center"
                    app:layout_constraintBottom_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/gamenight" />


            </LinearLayout>


        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>